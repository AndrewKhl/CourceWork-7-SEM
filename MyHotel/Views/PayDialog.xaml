<Window x:Class="MyHotel.PayDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyHotel"
        mc:Ignorable="d" Background="{StaticResource CreditCardBrush}"
        Title="Pay" Height="300" Width="520">
    <Canvas>
        <TextBox Text="{local:BindingProp Path=CardNumber}" Style="{StaticResource CommonTextBoxStyle}" Canvas.Left="39" Margin="0" Canvas.Top="49"/>
        <TextBox Text="{local:BindingProp Path=DateExpiration}" Style="{StaticResource CommonTextBoxStyle}" Canvas.Left="39" Margin="0" Canvas.Top="117"/>
        <TextBox Text="{local:BindingProp Path=MonthExpiration}" Style="{StaticResource CommonTextBoxStyle}" Canvas.Left="39" Margin="0" Canvas.Top="186"/>
        <TextBox Text="{local:BindingProp Path=CardholderName}" Style="{StaticResource CommonTextBoxStyle}" Canvas.Left="158" Margin="0" Canvas.Top="117"/>
        <TextBox Text="{local:BindingProp Path=Cvs}" Style="{StaticResource CommonTextBoxStyle}" Canvas.Left="413" Margin="0" Canvas.Top="150" Width="52"/>
    </Canvas>
</Window>
